<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/action_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#9A844A"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"

    >

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/restaurants"
        android:background="@drawable/restaurant_icon"
        android:contentDescription="@string/restaurants"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Map"
        android:layout_alignStart="@+id/Map"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Coffee"
        android:background="@drawable/coffee_image"
        android:contentDescription="@string/Coffee"
        android:layout_below="@+id/restaurants"
        android:layout_alignLeft="@+id/restaurants"
        android:layout_alignStart="@+id/restaurants"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Map"
        android:background="@drawable/map_icon"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/Maps"
        android:layout_below="@+id/Coffee"
        android:layout_centerHorizontal="true" />

</RelativeLayout>